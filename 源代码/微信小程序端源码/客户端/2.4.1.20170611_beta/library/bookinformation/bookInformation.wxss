.book-container{
  display:flex;
  flex-direction:column;
  background-color:#eee;
}

.tool-container{
  display:flex;
  flex-direction:row;
  justify-content: space-around;
  background-color:#eee;
  font-size: 25rpx;
  font-family: microsoft yahei;
  height:120rpx;
}

.collect .reserve .shopcar .comment{
  display:flex;
  flex-direction:column;

}

.collect image{
  width:40rpx;
  height:40rpx;
}
.reserve image{
