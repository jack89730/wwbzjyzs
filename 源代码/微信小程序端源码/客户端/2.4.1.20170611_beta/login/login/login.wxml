
<!--loginpages/login/login.wxml-->
<form bindsubmit="formsubmit">
  <view class="wenzi">
    <text>用户:</text>
  </view>
  <input class="shuru" type="text" name="telephone" placeholder="手机号"/>
  <view class="wenzi">
    <text>密码:</text>
  </view>
  <input class="shuru" type="password" name="password" placeholder="密码" />
  <view class="an">
    <button class="anniu" bindtap="register" form-type="register">注册</button>
    <button class="anniu" form-type="submit">登录</button>
  </view>
</form>