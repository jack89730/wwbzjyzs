<template name="categorybook">
  <view class="categorybook-container">
    <view class="categorybook-image-container">
      <image src="{{image}}"></image>
    </view>
    <view class="categorybook-infor-container">
      <view class="title">
        <text >{{title}}</text>
      </view>
       <view class="subtitle">
        <text >{{subtitle}}</text>
      </view>
      <view class="author">
        <text >{{author}}</text>
      </view>
      <view class="total">
        <text >藏书量: </text>
        <text class="num">{{count}}本</text>
      </view>
    </view>
  </view>
</template>